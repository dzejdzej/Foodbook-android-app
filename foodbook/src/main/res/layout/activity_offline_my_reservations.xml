<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.OfflineMyReservations">

    <TextView
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:text="You are offline! You can view your existing reservations here"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNoData"
        android:visibility="invisible"
        android:text="You have not made any reservations, no data available!"
        />

    <ListView
        android:id="@+id/myReservationsListView"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        >
    </ListView>

</LinearLayout>
