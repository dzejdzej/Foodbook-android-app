<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorGrayBackground">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorToolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:title="NEW RESEVATION"
            app:titleTextAppearance="@style/BoldText">
        </android.support.v7.widget.Toolbar>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="255dp"
            android:layout_marginTop="14dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:src="@mipmap/reservation" />

        <ProgressBar
            android:id="@+id/loader"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/linearLayoutSearch"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/colorGrayBackground"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pick date"
                    android:padding="16dp"
                    android:id="@+id/datePickerButton"
                    android:background="@color/accent_material_dark"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
            <TextView
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="30dp"
                android:shadowColor="@color/colorWhite"
                android:shadowRadius="6"
                android:textColor="@color/colorBlack"
                android:id="@+id/datePickedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pick time"
                    android:padding="16dp"
                    android:id="@+id/timePickerButton"
                    android:background="@color/accent_material_dark"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <TextView
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="30dp"
                android:shadowColor="@color/colorWhite"
                android:shadowRadius="6"
                android:textColor="@color/colorBlack"
                android:id="@+id/timePickedText" />


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/durationEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Duration (days)"
                        android:inputType="number"
                        android:textColorHint="#000000" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/numberOfSeatsEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Persons"
                        android:inputType="number"
                        android:textColorHint="#000000" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--<android.support.design.widget.TextInputEditText-->
                        <!--android:id="@+id/locationEditText"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:ems="10"-->
                        <!--android:hint="Location (city)"-->
                        <!--android:inputType="text"-->
                        <!--android:textColorHint="#000000" />-->
                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/locationAutocompleteText"
                        android:ems="10"
                        android:hint="City"
                        android:inputType="text"/>
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--<android.support.design.widget.TextInputEditText-->
                        <!--android:id="@+id/cuisineEditText"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:ems="10"-->
                        <!--android:hint="Food type"-->
                        <!--android:inputType="text"-->
                        <!--android:textColorHint="#000000" />-->
                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cuisineAutocompleteText"
                        android:ems="10"
                        android:hint="Food type"
                        android:inputType="text"/>
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/search"
                    android:id="@+id/searchButton"
                    android:background="@color/accent_material_dark"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="19dp"/>


                    <!--<ListView-->
                        <!--android:id="@+id/searchListView"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content" />-->

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</ScrollView>

