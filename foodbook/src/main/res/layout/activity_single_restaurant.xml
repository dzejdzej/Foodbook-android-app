<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutSingleRestaurant"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorGrayBackground"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/singleRestaurantImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/singleRestaurantNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:textStyle="italic"
        android:layout_below="@+id/singleRestaurantImageView"/>


    <TextView
        android:id="@+id/singleRestaurantOpenTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/colorTextGray"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:textStyle="normal"
        android:layout_below="@+id/singleRestaurantNameTextView"/>


    <TextView
        android:id="@+id/singleRestaurantStreetTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/colorTextGray"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:textStyle="normal"
        android:layout_below="@+id/singleRestaurantOpenTextView"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:id="@+id/reserveButton"
        android:background="@color/accent_material_dark"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="19dp"/>


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        tools:context="com.robpercival.demoapp.activities.SingleRestaurantActivity"
        android:layout_below="@+id/singleRestaurantStreetTextView"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <RatingBar
            android:id="@+id/singleRestaurantRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            style="?android:attr/ratingBarStyleIndicator"
            android:isIndicator="true"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/singleRestaurantRatingBarValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textStyle="normal"
            android:layout_toRightOf="@+id/singleRestaurantRatingBar"
            android:layout_alignParentRight="true"
            android:gravity="center"/>
    </LinearLayout>


</LinearLayout>
</ScrollView>

